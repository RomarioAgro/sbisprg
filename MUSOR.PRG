Функция НаимУбратьМусор(пНаим)
{
  Если(Найти(пНаим,"~") ИЛИ Найти(пНаим,"#") ИЛИ Найти(пНаим,"(") ИЛИ Найти(пНаим,")"))
  {
    А1=Найти(пНаим,"(");
    А2=Найти(пНаим,")");
    пНаим=ПодСтрока(пНаим,1,А1-1)+ПодСтрока(пНаим,А2+2,-1);
    Если(Найти(пНаим,"~")) пНаим=ПодСтрока(пНаим,1,Найти(пНаим,"~")-1);
    Если(Найти(пНаим,"#")) пНаим=ПодСтрока(пНаим,1,Найти(пНаим,"~")-1);
  }
  Вернуть(пНаим);
}
Функция УбратьПробКнц(НаимДо)
{
  Пока(ПодСтрока(НаимДо,Размер(НаимДо),1)==" ")
    НаимДо=ПодСтрока(НаимДо,1,Размер(НаимДо)-1);
  Вернуть(НаимДо);
}