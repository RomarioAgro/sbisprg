Функция _ВыгрузкаПродажНОВ(...)
{
   Если(!Есть(ПАРАМЕТРЫ.1))
      пДата=ТекДат;
   Иначе
      пДата=ПАРАМЕТРЫ.1;
   пРаздел = НОМКАС;
   Если(!ДаНет("Производится выгрузка продаж ?"))
      Вернуть 1;
   Спросить("Подготовить продажи за ", пДата);
   пНВ  = ТекВремя;
   пНВ2 = ТекВремя;
   пИмя = "j"+ПодСтрока(пДата,1,2)+ПодСтрока(пДата,4,2)+пРаздел;
   Запустить( "cmd /c md sales", 1 );
   Запустить( "cmd /c del sales\\"+пИмя+".txt", 1 );
   пСч=0;
   ДляВсех(Документов("НаклРасх",пДата,пДата))
   Если(Документ.ПРОДАЖА)
   {
      пСч++;
      ВывестиСтатус("Выгрузка накладных за "+пДата+"/"+Документ.Номер+"/"+Время(ТекВремя-пНВ2),1);
      _ЭкспортЧека();
   }
   Вернуть(пСч);
}
