{
   пКодАрт=";"+'НАИМ.Иерархия.НомНомер'+";";
   Если(Размер(оМас)>=пУсловиеАкции 
   и Наим.СуммаЦен>0 
   и Наим.Цена2>0
   и Найти(пСтКатИскл,'НАИМ.Иерархия.Иерархия.НомНомер')==0
   и Список_исключений_по_акции_2_1_колготки_608(пКодарт)==0)
   {
