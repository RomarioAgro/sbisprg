Функция _ПроверитьНоменклатуру(пНомер,пНаим,пНомРод)
{
   ВывестиСтатус("Проверка/создание наименования "+пНомер+"|"+пНаим,1);
   оНом2=Выборка("Номенклатура");
   оРаздел2=Выборка("Номенклатура");
   оНом2.Наименование=пНаим;
   оНом2.НомНомер    =пНомер;
#   пРодитель=""; # НомНомер группы
   Если(Найти(оНом2,"НомНомер"))
      {
      Если('оНом2.НомНомер'!=пНомер И пНомер!="" И пНаим!="")
         {
            Очистить(оНом2);
            оНом2.Наименование=пНаим;
            оНом2.НомНомер    =пНомер;
            Корень(оНом2);
            Добавить(оНом2); # добавляем запись
         }
      }
# Если карточка в создаваемым НомНомер уже существует, а названия
# не равны
   Если(оНом2.НомНомер==пНомер И оНом2.Наименование!=пНаим)
      {
         Корень(оНом2);
         оНом2.Наименование=пНаим;
         оНом2.НомНомер    =пНомер;
         Сохранить(оНом2); # сохраняем запись
         
      }

   Если(пНомРод!="" И оНом2.Иерархия.НомНомер!=пНомРод)
      {
         Очистить(оРаздел2);
         оРаздел2.НомНомер=пНомРод;
         Если(Найти(оРаздел2,"НомНомер"))
            {
               Если(оРаздел2.НомНомер==пНомРод)
                  {

                     Связать(оНом2.Иерархия,оРаздел2.Лицо_);
                     Сохранить(оНом2);

                  }
            }
      Вернуть 1;
      
   }
   Вернуть пНомер;
   
}
