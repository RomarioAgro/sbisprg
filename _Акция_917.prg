    {
     пКолакции+='Наим.Кол_во'
    }
   }
Если(пКолакции>=3)
ДляВсех(Наименований())
{
    пКодарт=";"+'НаИМ.Иерархия.НомНомер'+";";
    пЦена3=ЦенаНаДату('Дата',"Цена3");
    пЦена2=ЦенаНаДату('Дата',"Цена2");
    пВкл=атлант_3_лучше_чем_1_носки_мужские_917(пКодарт)
    пВкл_КГК=_ТКК_917('НаИМ.Иерархия.НомНомер');
    Если((пВкл!=0 или пВкл_КГК!=0)
    и Наим.СуммаЦен>0
    и пЦена2==0) 
    {
      Наим.СуммаЦен=Окр(Наим.Кол_во*пЦена3*0.8,1);
      'Наим.Комментарий'="917";
      '.Примечание'+="917;";
      Сохранить(Наим);
    }
}
}

Функция _ТКК_917(пКодарт)
{
#мужское носки
пСтрокаМаг=";AT;";
Если(Найти(пСтрокаМаг,КаСНОМ)==0) Вернуть(0);
пСтрока12=";94;";
ДляВсех(Товаров(1,пКодарт))
   {
      Если('ТОВАР.Класс'=="7" 
      и 'ТОВАР.Группа'=="5"
      и Найти(пСтрока12,'ТОВАР.Категория')!=0) Вернуть(1) 
      Иначе Вернуть(0);
   }

}