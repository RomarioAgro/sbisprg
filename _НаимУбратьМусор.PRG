Функция _НаимУбратьМусор(пНаим)
{
  Если(Найти(пНаим,"~") ИЛИ Найти(пНаим,"#") ИЛИ Найти(пНаим,"(") ИЛИ Найти(пНаим,")"))
  {
    А1=Найти(пНаим,"(");
    А2=Найти(пНаим,")");
    пНаим=ПодСтрока(пНаим,1,А1-1)+ПодСтрока(пНаим,А2+2,-1);
    Если(Найти(пНаим,"~")) пНаим=ПодСтрока(пНаим,1,Найти(пНаим,"~")-1);
    Если(Найти(пНаим,"#")) пНаим=ПодСтрока(пНаим,1,Найти(пНаим,"~")-1);
  }
  пПробел=1;
  Пока(пПробел==1)
     {
     пПробел=0;  
     Если(Найти(пНаим,"  ")) 
        {
           пНаим=Заменить(пНаим,"  "," ");
#           отладить;
#           Сообщить(пНаим);
           пПробел=1;
        }
#     Иначе Сообщить("Ок");
     }
#  Сообщить("Ок! Еще раз!");
  Вернуть(пНаим);
}